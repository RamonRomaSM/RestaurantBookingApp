<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestauranteUnicoFragment">

        <!-- CABECERA -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="155dp" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="100dp"

                android:gravity="center"
                android:text="TextView"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="168dp"
                tools:layout_editor_absoluteY="155dp" />


        </LinearLayout>

        <!-- SCROLL VIEW PRINCIPAL-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="90dp"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:text="TEXTO DE PRUEBA"
                    android:textSize="15dp" />
                <!-- SCROLL VIEW DE LAS IMAGENES -->
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/sampleRestaurante1"
                            android:layout_width="300dp"
                            android:layout_height="300dp" />

                        <ImageView
                            android:id="@+id/sampleRestaurante2"
                            android:layout_width="300dp"
                            android:layout_height="300dp" />

                        <ImageView
                            android:id="@+id/sampleRestaurante3"
                            android:layout_width="300dp"
                            android:layout_height="300dp" />

                        <ImageView
                            android:id="@+id/sampleRestaurante4"
                            android:layout_width="300dp"
                            android:layout_height="300dp" />

                    </LinearLayout>

                </HorizontalScrollView>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>
    <!-- BOTONES -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/iraweb"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Ver la pagina web"
            android:layout_marginBottom="30dp"/>

        <Button
            android:id="@+id/reservar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Hacer reserva"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>
</FrameLayout>





